@page
@model FrontApp.Pages.User.LoginModel
@using System.Security.Claims;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@section Scripts{
    <script>
        function Login() {
            fetch(baseUrl + "/api/User/GetToken", {
                method: 'POST',
                credentials: 'include',
                headers: {
                    'Content-Type': 'application/json',
                },
                redirect: 'follow',
                body: JSON.stringify({
                    "userID": $('input[name=userid]').val(),
                    "password": $('input[name=password]').val(),
                    "rememberMe": true
                })
            }).then(response => {
                if (response.ok) {
                    window.location.href = "/"
                } else {
                    console.log(response.status)
                }
            }
            ).catch((e) => {
            });

        }</script>
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="text-danger"></div>
            <div class="form-group">
                UserID
                <input type="text" name="userid" class="form-control" placeholder="UserID" autofocus />
                <span class="text-danger" name="spUserID"></span>
            </div>
            <div class="form-group">
                Password
                <input type="password" name="password" class="form-control" placeholder="Password" />
                <span class="text-danger"></span>
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" placeholder="Remember" />
                    RememberMe
                </label>
                <span class="text-danger"></span>
            </div>
        </form>
        <button name="btnLogin" onclick="Login()" class="btn btn-primary">Login</button>
    </div>
</div>