@page
@using System.Security.Claims;
@model LoginInfo
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
@section Scripts{
    <script>function test() {
            fetch("https://localhost:1235/api/User/GetToken", {
                method: 'POST',
                credentials: 'include',
                headers: {
                    'Content-Type': 'application/json',
                },
                redirect: 'follow',
                body: JSON.stringify({
                    "userID": "user111",
                    "password": "111111",
                    "rememberMe": true
                })
            }).then(response => response.json())
            .then(response => {
                $('#UserSp').text(response.userName);
                window.localStorage.setItem('name', response.userName);
                window.location.href = "/"
            });
            
        }</script>
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post" onsubmit="btnLogin.disabled = true; return true;">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                @Html.DisplayNameFor(m => m.UserID)
                <input type="text" name="userid" class="form-control" asp-for="UserID" placeholder="User ID" autofocus />
                <span class="text-danger" asp-validation-for="UserID"></span>
            </div>
            <div class="form-group">
                @Html.DisplayNameFor(m => m.Password)
                <input type="password" class="form-control" asp-for="Password" placeholder="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="checkbox">
                <label asp-for="RememberMe">
                    <input type="checkbox" asp-for="RememberMe" placeholder="Remember" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
                <span class="text-danger" asp-validation-for="RememberMe"></span>
            </div>
        </form>
        <button name="btnLogin" onclick="test()" class="btn btn-primary">Login</button>
    </div>
</div>